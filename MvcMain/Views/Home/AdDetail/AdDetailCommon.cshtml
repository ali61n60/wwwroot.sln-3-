<script type="text/javascript">
    $(document).ready(function () {
        $('#<%=imageGallery.ClientID%>').lightSlider({
            auto: true,
            pause: 5000,
            pager: true,

            gallery: true,
            item: 1,
            loop: true,
            thumbItem: 6,
           
            slideMargin: 0,
            enableDrag: true,
            currentPagerPosition: 'left',
            onSliderLoad: function (el) {
                el.lightGallery({
                    selector: '#<%=imageGallery.ClientID%> .lslide'
                });
            }
        });
    });
</script>
