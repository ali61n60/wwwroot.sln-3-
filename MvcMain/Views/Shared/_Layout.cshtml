                <p><a asp-area="" asp-controller="Home" asp-action="Index">خانه</a></p>
                <p><a asp-area="" asp-controller="Home" asp-action="Index">درباره ما</a></p>
                <p><a asp-area="" asp-controller="Home" asp-action="Index">تماس با ما</a></p>
