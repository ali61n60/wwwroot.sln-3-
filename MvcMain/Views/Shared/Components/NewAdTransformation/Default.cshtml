                <option value="HoodColored">کاپوت رنگ</option>
                <option value="RoundColored">دور رنگ</option>
                <option value="FullyColored">کامل رنگ</option>
                <option value="Accident">تصادفی</option>
                <option value="Scrap">اوراقی</option>
                <option value="BodyChanged">اتاق تعویض</option>
            </select>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-4">
            <div class="col-sm-6">
                <label>گیربکس</label>
            </div>
            <div id="gearboxType" class="col-sm-6">
                <input type="radio" name="gearbox" value="Manual" checked="checked" />دنده ای<br />
                <input type="radio" name="gearbox" value="Automatic" />اتوماتیک
            </div>
        </div>
        <div class="col-sm-4">

        </div>
    </div>
</div>

<div class="well">
    <div class="row">
        <div class="col-sm-12">
            <input type="radio" name="payment" value="cash" checked="checked">نقد<br />
            <input type="radio" name="payment" value="insatllment">قسطی<br />
        </div>
        <div class="col-sm-3">
            <input id="priceCash" class="form-control" placeholder="قیمت نقدی" />
        </div>
        <div class="col-sm-3">
            <input id="numberOfInstallments" class="form-control" placeholder="تعداد اقساط" disabled="disabled" />
        </div>

        <div class="col-sm-3">
            <input id="distanceBetweenPerPayment" class="form-control" placeholder="فاصله بین اقساط بر حسب ماه" disabled="disabled" />
        </div>
        <div class="col-sm-3">
            <input id="payPerInstallment" class="form-control" placeholder="مبلغ هر قسط" disabled="disabled" />
        </div>
    </div>
</div>