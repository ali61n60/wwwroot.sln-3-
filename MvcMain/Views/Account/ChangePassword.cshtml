@model ChangePasswordModel

@{
    ViewData["Title"] = "تغییر رمز ورود";
    ViewData["PageTitle"] = "تغییر رمز ورود";
    Layout = "_Layout";
}

@section TopTop
{
    @Html.Partial("TopTop")
}
@section NavBar
{
    @Html.Partial("NavBar")
}
@section PageTitle
{
    @Html.Partial("PageTitle")
}
@section TopHeader
{

}
@section SideNav
{
    @Html.Partial("SideNav")
}
@section Body
{
    <div class="text-danger text-right" dir="rtl" asp-validation-summary="All"></div>
    <form asp-action="ChangePassword" method="post">
        <div class="row form-group">
            <div class="col-sm-2"><label asp-for="Password">رمز ورود</label></div>
            <div class="col-sm-10"><input asp-for="Password" class="form-control" placeholder="رمز ورود" /></div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2"><label asp-for="RepeatPassword">تکرار رمز ورود</label></div>
            <div class="col-sm-10"><input asp-for="RepeatPassword" class="form-control" placeholder="تکرار رمز ورود" /></div>
        </div>
        
        <div class="row">
            <div class="col-sm-6">
                <button class="btn btn-primary btn-lg btn-block" type="submit">تغییر رمز ورود</button>
            </div>
            <div class="col-sm-6">
                <a asp-action="AccountManagement" class="btn btn-info btn-lg btn-block">انصراف</a>
            </div>
        </div>
    </form>
}

@section Footer
{
    @Html.Partial("Footer")
}

@section scripts{

}